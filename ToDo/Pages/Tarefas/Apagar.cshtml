@page
@model ToDo.Pages_Items.DeleteModel

@{
    ViewData["Title"] = "Apagar Tarefa";
}

<h1>‚ùå Apagar Tarefa</h1>

<h3>Tem certeza que deseja apagar?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Due)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Item.Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar para a Lista de Tarefas</a>
    </form>
</div>
