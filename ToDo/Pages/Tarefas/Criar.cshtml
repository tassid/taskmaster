@page
@model ToDo.Pages_Items.CreateModel

@{
    ViewData["Title"] = "Criar Tarefa";
}

<h1>✏️ Criar Tarefa</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Nome</label>
                <input asp-for="Item.Name" class="form-control" />
                <span asp-validation-for="Item.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Data</label>
                <input asp-for="Item.Due" class="form-control" />
                <span asp-validation-for="Item.Due" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Tarefa" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar para a Lista de Tarefas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
